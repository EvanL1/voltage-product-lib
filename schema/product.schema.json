{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/your-org/voltage-product-lib/product.schema.json",
  "title": "Voltage Product Definition",
  "description": "Schema for VoltageEMS product templates",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Product name (unique identifier)"
    },
    "pName": {
      "type": "string",
      "description": "Parent product name for hierarchy"
    },
    "P": {
      "type": "array",
      "description": "Property definitions",
      "items": { "$ref": "#/$defs/pointDef" },
      "default": []
    },
    "M": {
      "type": "array",
      "description": "Measurement point definitions",
      "items": { "$ref": "#/$defs/pointDef" },
      "default": []
    },
    "A": {
      "type": "array",
      "description": "Action point definitions",
      "items": { "$ref": "#/$defs/pointDef" },
      "default": []
    }
  },
  "$defs": {
    "pointDef": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1,
          "description": "Point ID (unique within product)"
        },
        "name": {
          "type": "string",
          "description": "Point name"
        },
        "unit": {
          "type": "string",
          "description": "Unit of measurement",
          "default": ""
        },
        "type": {
          "type": "string",
          "enum": ["number", "string"],
          "description": "Value type",
          "default": "number"
        }
      }
    }
  }
}
